# -*- mode: snippet -*-
# name: pwn
# key: pwn
# --
from pwn import *
context.terminal = ['gnome-terminal', '-x', 'sh', '-c']
if args['DEBUG']:
    context.log_level = 'debug'
context.binary = "$1"
$1 = ELF(context.binary)
if args['REMOTE']:
    p = remote(${2:ip}, ${3:port})
else:
    p = process("$1")
log.info('PID: '+proc.pidof(p))
$0
